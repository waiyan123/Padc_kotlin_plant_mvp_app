<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/margin_20"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/margin_10"
    android:layout_height="200dp">

    <RelativeLayout
        android:background="@color/colorMainBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_fav"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/margin_20"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/img_plant_pic"
            android:src="@drawable/plant_pic"
            android:background="@android:drawable/screen_background_light_transparent"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/margin_20"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <TextView
            android:text="Tullips"
            android:id="@+id/tv_plant_name"
            android:layout_margin="@dimen/margin_20"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColorHint="@color/black"
            android:layout_below="@id/img_fav"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/img_owner"
            android:layout_marginLeft="@dimen/margin_20"
            android:src="@drawable/ic_search_24dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_plant_name"
            android:layout_width="@dimen/margin_20"
            android:layout_height="@dimen/margin_20"/>
        <TextView
            android:text="By Kate B"
            android:id="@+id/tv_plant_owner"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_below="@id/tv_plant_name"
            android:layout_toRightOf="@id/img_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
